pipeline {
    agent any
    parameters { choice(name: 'ENV', choices: ['dev', 'prod'], description: 'select') }
    stages { 
        stage ('terrafform Init') {
             steps {
                sh "terraform init -backend-config=${ENV}/${ENV}-backend.tfvars"
            }
        }
       
        stage('terrafform plan') {
            steps {
                sh "terraform plan -var-file=${ENV}/${ENV}.tfvars"
            }
        }
    
        stage('terrafform plan') {
            steps {
                sh "terraform apply -var-file=${ENV}/${ENV}.tfvars -auto-approve"
        }
    }
   }
}

